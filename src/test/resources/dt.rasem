self.width = 100 + 20
self.height = 100 + 20

points = %w(
    27    75
    75    25
    65    50
    18    69
    11    89
    49    95
    95    54
    34    13
    58    14
    22    25).map(&:to_f)

triangles = %w(
     4    10     1
     3     8     9
     10    4     5
     4     1     5
     1     6     5
     3    10     8
     1     3     6
     2     9     7
     6     3     7
     1    10     3
).map{|x| x.to_i - 1}

0.step(points.length-1, 2) do |i|
  x = points[i]
  y = points[i+1]
  circle x, y, 1
  text(x, y+10) { raw "#{i/2}"}
end

0.step(triangles.length-1, 3) do |i_triangle|
  corners = triangles[i_triangle, 3].map{|i| points[i*2, 2]}
  polygon(*(corners.flatten), :fill=>:none)
end